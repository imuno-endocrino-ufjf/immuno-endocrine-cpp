{
  "version": 2,
  "configurePresets": [
    {
      "name": "vcpkg-rel",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "vcpkg-debug",
      "inherits": "vcpkg-rel",
      "cacheVariables": {
        "ENABLE_PROFILING": true
      }
    }
  ]
}
