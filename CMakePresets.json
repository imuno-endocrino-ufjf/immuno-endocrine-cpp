{
  "version": 2,
  "configurePresets": [
    {
      "name": "vcpkg-release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_MAKE_PROGRAM": "/usr/bin/ninja",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      },
      "environment": {
        "VCPKG_ROOT": "/home/getcomp/vcpkg"
      }
    },
    {
      "name": "vcpkg-debug",
      "inherits": "vcpkg-release",
      "cacheVariables": {
        "ENABLE_DEBUG": true
      }
    }
  ]
}
